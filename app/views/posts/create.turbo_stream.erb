<%= turbo_stream.prepend "posts_list" do %>
  <%= render @post %>
<% end %>

<%= turbo_stream.update "new_post", "" %>

<%= turbo_stream.append "notifications" do %>
  <script>
    document.dispatchEvent(new CustomEvent("notify", { detail: { message: "Post was successfully created.", type: "success" } }))
  </script>
<% end %>
