<%= form_with(model: post, class: "space-y-4") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-lg">
      <h2 class="font-bold"><%= pluralize(post.errors.count, "error") %> prevented this post from being saved:</h2>
      <ul class="list-disc ml-5">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :titulo, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :titulo, class: "w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="space-y-2">
    <%= form.label :conteudo, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :conteudo, rows: 4, class: "w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit "Save", class: "btn-primary" %>
    <%= link_to "Cancel", posts_path, data: { turbo_frame: dom_id(@post) }, 
        class: "btn-secondary" %> 
  </div>

<% end %>
