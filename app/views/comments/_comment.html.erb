<%= turbo_frame_tag dom_id(comment) do %>
  <div id="<%= dom_id(comment) %>" class="ml-4 p-3 rounded-lg bg-gray-50 text-sm"> 
    <p>
      <span class="font-medium text-gray-800"><%= comment.user.email %></span>:
      <%= comment.body %>

      <% if safe_policy?(comment, :update) || safe_policy?(comment, :destroy) %>
        <span class="text-xs text-gray-500 ml-2">
          (
          <% if safe_policy?(comment, :update) %>
            <%= link_to "Edit",
                edit_post_comment_path(comment.post, comment),
                data: { turbo_frame: dom_id(comment) },
                class: "text-yellow-600 hover:underline" %>

          <% end %>
          |
          <% if safe_policy?(comment, :destroy) %>
            <%= link_to "Delete", post_comment_path(comment.post, comment),
                  data: { turbo_method: :delete, turbo_confirm: "Delete this comment?" },
                  class: "text-red-600 hover:underline ml-1" %>
          <% end %>
          )
        </span>
      <% end %>
      </p>
  </div>
<% end %>