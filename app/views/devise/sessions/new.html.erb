<div class="min-h-screen flex flex-col items-center bg-gray-50 px-4 sm:px-6 lg:px-8">
  <div class="auth-card">
    <h2 class="text-2xl font-bold text-center text-gray-800">Sign in to your account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-6 space-y-5" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, required: true,
              class: "mt-1 w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true,
              class: "mt-1 w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
          <%= f.label :remember_me, class: "ml-2 text-gray-600" %>
        </div>

        <%= link_to "Forgot your password?", new_password_path(resource_name),
              class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
      </div>

      <div>
        <%= f.submit "Sign in", class: "btn-primary w-full" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      Donâ€™t have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-success" %>
    </p>
  </div>
</div>
